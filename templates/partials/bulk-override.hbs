{{!-- Bulk Override Visibility Bar Partial --}}
<div class="bulk-override-bar" data-component="bulk-override">
  <div class="bulk-override-label">
    <i class="fas fa-layer-group"></i>
    <span>{{localize 'PF2E_VISIONER.UI.BULK_SET_VISIBILITY'}}</span>
  </div>
  <div class="bulk-override-states">
    {{#each bulkOverrideStates as |state|}}
      <button type="button" class="bulk-override-state-btn {{state.cssClass}}" data-action="bulkOverrideSet" data-state="{{state.value}}" data-tooltip="{{state.label}}">
        <i class="{{state.icon}}"></i>
      </button>
    {{/each}}
  </div>
  <div class="bulk-override-actions">
    <button type="button" class="bulk-override-clear-btn" data-action="bulkOverrideClear" data-tooltip="{{localize 'PF2E_VISIONER.UI.CLEAR_BULK_OVERRIDES'}}">
      <i class="fas fa-times-circle"></i>
    </button>
  </div>
</div>
